<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>log/server-prod.log</File>
		<rollingPolicy
				class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>log/server_%d{yyyy-MM-dd}.log.zip</FileNamePattern>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{80} - %msg%n</pattern>
		</layout>
	</appender>

	<root level="error">
		<appender-ref ref="LOGFILE"/>
	</root>

	<logger name="com.zzsim.taxi" level="INFO" addtivity="false"/>
	<logger name="io.ebean" level="DEBUG" addtivity="false" />
	<logger name="org.springframework.context.support.PostProcessorRegistrationDelegate" level="INFO" addtivity="false"/>
	<logger name="org.springframework.context.support.FilterRegistrationBean" level="INFO" addtivity="false"/>
	<logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" level="DEBUG" addtivity="false"/>
	<logger name="org.apache.coyote.http11" level="DEBUG" addtivity="false"/>
	<logger name="org.springframework.boot.context.embedded.tomcat" level="DEBUG" addtivity="false"/>
	<logger name="springfox.documentation.swagger2.web.ClassOrApiAnnotationResourceGrouping" level="error" addtivity="false"/>
	<logger name="springfox.documentation.spring.web.caching.CachingAspect" level="error" addtivity="false"/>

</configuration>